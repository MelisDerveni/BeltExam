
@model User

<h2>Register</h2>

<form action="Register"  method="post">
    <div class="form-row">
        <div class="col-lg-3">
            <input  placeholder="First Name" class="form-control my-3 p-2" name="FirstName">
            <span asp-validation-for ="FirstName"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-3">
            <input  placeholder="Last Name" class="form-control my-3 p-2" name="LastName">
            <span asp-validation-for ="LastName"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-3">
            <input placeholder="Username:" class="form-control my-3 p-2" name="UserName">
            <span asp-validation-for ="UserName"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-3">
            <input  placeholder="Password:" class="form-control my-3 p-2" name="Password">
            <span asp-validation-for ="Password"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-3">
            <input  placeholder="Confirm Password:" class="form-control my-3 p-2" name="Confirm">
            <span asp-validation-for ="Confirm"></span>
        </div>
    </div>
    
    <div class="form-row">
        <div class="col-lg-3">
            <input type="submit" value="Register" class="form-control my-3 p-2 btn1 mt-3 mb-5">
        </div>
    </div>
</form>